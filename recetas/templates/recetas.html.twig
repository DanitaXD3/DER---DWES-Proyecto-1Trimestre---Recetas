{% extends "base.html.twig" %}

{% block title %}Recetas{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow p-4">
            <h2 class="text-center mb-3" style="color: #5a7d6a;">Recetas Disponibles</h2>

            {# Formulario de filtro por país #}
            <form method="GET" class="mb-4 text-center">
                <label for="pais_filtro" class="form-label me-2">Filtrar por país:</label>
                <select id="pais_filtro" name="pais" class="form-select d-inline-block w-auto">
                    <option value="">Todos</option>
                    {% for pais in paises_disponibles %}
                        <option value="{{ pais }}" {% if pais == pais_filtro %}selected{% endif %}>{{ pais }}</option>
                    {% endfor %}
                </select>
                <button class="btn btn-primary btn-sm ms-2">Filtrar</button>
            </form>

            {% if recetas is empty %}
                <p class="text-center" style="color: #4a4a4a;">No hay recetas disponibles.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle text-center" style="background-color: #f6f8f5;">
                        <thead style="background-color: #e8f0e4; color: #3f5f4f;">
                            <tr>
                                <th>Nombre Receta</th>
                                <th>País de Origen</th>
                                <th>Descripción</th>
                                <th>Estrellas</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for receta in recetas %}
                                <tr style="background-color: #ffffff;">
                                    <td>{{ receta.nombre }}</td>
                                    <td>{{ receta.pais_origen }}</td>
                                    <td>{{ receta.descripcion }}</td>
                                    <td>
                                        {% for i in 1..receta.estrellas %} ⭐ {% endfor %}
                                    </td>
                                    <td>
                                        <form method="POST">
                                        <input type="hidden" name="receta_id" value="{{ receta.id }}">
                                        <button class="btn btn-success btn-sm">Añadir receta</button>
                                        </form>

                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
