{% extends "base.html.twig" %}

{% block title %}Editar Receta{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow p-4">
            <h2 class="card-title text-center mb-4">Editar Receta</h2>

            {% if receta %}
                <form method="POST">
                    <input type="hidden" name="receta_id" value="{{ receta.id }}">

                    <div class="mb-3">
                        <input class="form-control" type="text" name="nombre" value="{{ receta.nombre }}" placeholder="Nombre de la receta" required>
                    </div>

                    <div class="mb-3">
                        <input class="form-control" type="text" name="pais_origen" value="{{ receta.pais_origen }}" placeholder="País de origen" required>
                    </div>

                    <div class="mb-3">
                        <textarea class="form-control" name="descripcion" placeholder="Descripción" required>{{ receta.descripcion }}</textarea>
                    </div>

                    <div class="mb-3">
                        <input class="form-control" type="number" name="estrellas" value="{{ receta.estrellas }}" min="1" max="5" placeholder="Número de estrellas" required>
                    </div>

                    <!-- Botón Editar con color pastel igual que en Mi Perfil -->
                    <button class="btn w-100" style="background-color: #f3d399; color: #fff; border: none;">Editar</button>
                </form>
            {% else %}
                <p class="text-center">Receta no encontrada.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
