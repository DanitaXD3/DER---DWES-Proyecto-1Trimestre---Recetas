{% extends "base.html.twig" %}

{% block title %}Registro{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow p-4">
            <h2 class="card-title text-center mb-4">Registro</h2>

            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            <form method="POST">
                <div class="mb-3">
                    <input class="form-control" type="email" name="email" placeholder="Correo electrónico" required>
                </div>

                <div class="mb-3">
                    <input class="form-control" type="text" name="usuario" placeholder="Usuario" required>
                </div>

                <div class="mb-3">
                    <input class="form-control" type="password" name="password" placeholder="Contraseña" required>
                </div>

                <div class="mb-3">
                    <input class="form-control" type="password" name="password_repeat" placeholder="Repetir Contraseña" required>
                </div>

                <button class="btn btn-success w-100">Registrar</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
