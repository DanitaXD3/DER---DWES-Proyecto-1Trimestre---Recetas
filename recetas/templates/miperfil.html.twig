{% extends "base.html.twig" %}

{% block title %}Mi Perfil{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow p-4" style="background-color: #fdfdfd; border-radius: 16px;">
            <h2 class="text-center mb-4" style="color: #5a7d6a;">Mis Recetas</h2>

            <!-- Desplegable con botón Filtrar -->
            <form method="GET" class="mb-3 d-flex justify-content-center align-items-center gap-2">
                <select name="pais" class="form-select w-50">
                    <option value="">Todos los países</option>
                    {% for pais in paises %}
                        <option value="{{ pais }}" {% if pais == pais_seleccionado %}selected{% endif %}>{{ pais }}</option>
                    {% endfor %}
                </select>
                <button class="btn btn-primary">Filtrar</button>
            </form>

            {% if recetas is empty %}
                <p class="text-center" style="color: #4a4a4a;">No tienes recetas añadidas.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle text-center" style="background-color: #f6f8f5;">
                        <thead style="background-color: #e8f0e4; color: #3f5f4f;">
                            <tr>
                                <th>Nombre Receta</th>
                                <th>País de Origen</th>
                                <th>Descripción</th>
                                <th>Estrellas</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for receta in recetas %}
                                <tr style="background-color: #ffffff;">
                                    <td>{{ receta.nombre }}</td>
                                    <td>{{ receta.pais_origen }}</td>
                                    <td>{{ receta.descripcion }}</td>
                                    <td>
                                        {% for i in 1..receta.estrellas %}
                                            ⭐
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <!-- Botón Editar -->
                                            <form method="GET" action="/public/editar.php">
                                                <input type="hidden" name="receta_id" value="{{ receta.id }}">
                                                <button class="btn btn-sm" style="background-color: #f3d399; color: #fff; border: none;">Editar</button>
                                            </form>

                                            <!-- Botón Eliminar -->
                                            <form method="POST">
                                                <input type="hidden" name="receta_id" value="{{ receta.id }}">
                                                <button class="btn btn-sm" style="background-color: #f5b5b5; color: #fff; border: none;">Eliminar receta</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}

            <div class="text-center mt-4">
                <a href="/public/recetas.php" class="btn btn-success">Añadir Nueva Receta</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
